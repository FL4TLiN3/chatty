<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <%= if @user do %>
      <meta name="tn:login" content="<%= @user.id %>">
    <% end %>
    <meta name="tn:csrf-token" content="<%= Plug.CSRFProtection.get_csrf_token %>">

    <title>Chatty</title>
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
  </head>

  <body>
    <div class="container-fluid" role="main">
      <div id="navbar" data-component="navbar:unauthorized"></div>

      <div class="row">
        <div id="sidebar" data-component="sidebar:unauthorized"></div>
        <div id="content"></div>
      </div>

      <%= @inner %>

    </div>

    <div id="modal-target"></div>

    <script src="<%= static_path(@conn, "/js/vendor.js") %>"></script>
    <script src="<%= static_path(@conn, "/js/app.js") %>"></script>
  </body>
</html>
